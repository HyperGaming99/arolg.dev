---
import Footer from '../components/Footer.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta property="og:title" content="Nikos Website" />
		<meta property="og:locale" content="en_US" />
		<meta name="description" content="Hey, this is my personal website." />
		<meta property="og:description" content="Hey, this is my personal website." />
		<meta property="og:image" content="https://nykoos.dev/avatar.png" />
		<meta property="og:url" content="https://nykoos.dev" />
		<meta name="theme-color" content="#8D46E7" />
		<meta name="twitter:card" content="summary" />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<script src="https://kit.fontawesome.com/6dd91f75c9.js" crossorigin="anonymous"></script>
	<body>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 40%,
			rgb(136, 58, 234) 60%
		);
		--background: #13151a;
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--background);
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
