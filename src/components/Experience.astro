---
interface Props {
    name: string;
    href: string;
    path: string;
}

const { name, href, path } = Astro.props;
---

<div class="experience">
    <a href={href} class="icon-link" target="_blank" rel="noopener noreferrer">
        <img src=`/experiences/${path}` class="icon" />
    </a>
</div>

<style>
    .experience {
        position: flex;
        align-items: center;
        margin: 1rem 0;
    }

    .icon {
        width: 40px;
        height: auto;
        margin-right: 10px;


        display: inline-flex;
        justify-content: center;
        align-items: center;
        transition: transform 0.2s;
    }

    .icon:hover {
        transform: scale(1.1);
    }
</style>